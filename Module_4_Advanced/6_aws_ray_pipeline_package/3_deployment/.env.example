# Environment Variables for Ray Document Processing Pipeline
# 
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

# AWS Credentials (if not using IAM role)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# S3 Bucket
S3_BUCKET=your-document-pipeline

# DynamoDB Tables
DYNAMODB_CONTROL_TABLE=document_processing_control
DYNAMODB_AUDIT_TABLE=document_processing_audit
DYNAMODB_METRICS_TABLE=pipeline_metrics_daily

# ============================================================================
# RAY CONFIGURATION
# ============================================================================

RAY_ADDRESS=auto
RAY_NAMESPACE=document-pipeline

# ============================================================================
# AI/ML API KEYS
# ============================================================================

# OpenAI API Key (required for embeddings and GPT-4 Vision)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Configuration
OPENAI_MODEL=text-embedding-3-small
OPENAI_DIMENSIONS=1536
OPENAI_GPT_MODEL=gpt-4o

# Pinecone API Key (required for vector storage)
PINECONE_API_KEY=your-pinecone-api-key-here

# Pinecone Configuration
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=financial-documents
PINECONE_NAMESPACE=default

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================

# Chunking Parameters
CHUNK_TARGET_SIZE=1500
CHUNK_MIN_SIZE=800
CHUNK_MAX_SIZE=2500

# Batch Sizes
EMBEDDING_BATCH_SIZE=100
PINECONE_BATCH_SIZE=100

# Retry Configuration
MAX_RETRIES=3

# Polling Configuration
POLL_INTERVAL_SECONDS=30
MAX_DOCUMENTS_PER_POLL=10

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
